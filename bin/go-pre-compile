#!/bin/bash

go install github.com/a-h/templ/cmd/templ@latest
go install github.com/sqlc-dev/sqlc/cmd/sqlc@latest
curl -o ./bin/tailwindcss https://github.com/tailwindlabs/tailwindcss/releases/download/v3.4.13/tailwindcss-linux-arm64
chmod u+x ./bin/tailwindcss

./bin/templ generate
./bin/sqlc generate
./bin/tailwindcss --input tailwind.base.css --output assets/css/main.css --minify
